<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <div class="pirate">
      <h3>Name: <%= @pirate.name %></h3>
      <h4>Height: <%= @pirate.height %></h4>
      <h4>Weight: <%= @pirate.weight %></h4>
    </div><br>

  <h1>Ships</h1>
    <% @ships.each do |ship| %>
      <div class="ship">
        <p>Name: <%= ship.name %></p>
        <p>Type: <%= ship.type %></p>
        <p>Booty: <%= ship.booty %></p>
      </div><br>
    <% end %>

  </body>
</html>
